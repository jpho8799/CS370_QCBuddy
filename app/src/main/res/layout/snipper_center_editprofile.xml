<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_photo"
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/changeProfilePhoto"
                android:layout_below="@+id/profile_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/linkblue"
                android:textSize="16sp"/>

            <!-- name section -->
            <RelativeLayout
                android:id="@+id/editname_relLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/changeProfilePhoto"
                android:layout_marginTop="50dp"
                android:background="@drawable/grey_border_bottom"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="username"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_profile"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- email section -->
            <RelativeLayout
                android:id="@+id/editemail_relLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editname_relLayout"
                android:background="@drawable/grey_border_bottom"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="Email"/>

            </RelativeLayout>

            <!-- display classes tutoring section -->
            <RelativeLayout
                android:id="@+id/edittutoring_relLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editemail_relLayout"
                android:background="@drawable/grey_border_bottom"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_currentclass"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_name"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="tutoring"/>

            </RelativeLayout>

            <!-- display_current class section -->
            <RelativeLayout
                android:id="@+id/editcurrentclass_relLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/edittutoring_relLayout"
                android:background="@drawable/grey_border_bottom"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_currentclass"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_tutoring"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:inputType="textNoSuggestions"
                    android:hint="current classes"/>

            </RelativeLayout>








        </RelativeLayout>




    </ScrollView>
</merge>