<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tvConfirmSignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Are you sure you want to sign out?"
            />
        <Button
            android:id="@+id/btnConfirmSignout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign Out"
            android:layout_below="@+id/tvConfirmSignout"
            android:background="@drawable/white_rounded_button"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbarSignout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvSigningOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing Out...."
        android:textSize="20sp"
        android:layout_alignBottom="@+id/progressbarSignout"
        android:layout_alignRight="@+id/progressbarSignout"
        android:layout_alignLeft="@+id/progressbarSignout"
        android:textColor="@color/black"

        />

</RelativeLayout>