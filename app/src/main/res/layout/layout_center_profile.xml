<merge xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <!-- *******Top tool bar ****************************************** -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayout1">

            <include layout = "@layout/snippet_top_profilebar"/>
        </RelativeLayout>
        <!-- **************** end of top bar section ****************************-->

        <!-- ************** Middle Section ******************************* -->
        <RelativeLayout
            android:id="@+id/relLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout1"
            android:background="@drawable/white_grey_border_bottom">
            <!-- 1 start of linear layout ************************-->

            <LinearLayout
                android:id="@+id/linLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="30">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/profile_image"
                        app:civ_border_color="@color/black"
                        android:layout_centerVertical="true"
                        app:civ_border_width="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    tools:ignore="Suspicious0dp">

                    <include layout="@layout/snippet_top_profile" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/linLayout"
                android:padding="20dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="user.name"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_email"
                    android:textColor="@color/linkblue"
                    android:text="email@email.com"
                    android:textSize="16sp"
                    />
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLayout"
                    android:columnCount="2"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tutoring_courses"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Tutoring: "
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/hourly_rate"
                        android:layout_columnWeight="1"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:text="Hourly Rate: "
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/class_standing"
                        android:layout_columnWeight="1"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Class Standing: "
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/current_courses"
                        android:layout_columnWeight="1"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Current Courses: "
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/previous_courses"
                        android:layout_columnWeight="1"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Previous Courses: "
                        android:textSize="16sp"
                        />
                </GridLayout>


            </LinearLayout>



            <!-- 1 end of linear layout ***************************-->

        </RelativeLayout>
        <!-- ***************** end of middle section *************************-->


    </RelativeLayout>

</merge>